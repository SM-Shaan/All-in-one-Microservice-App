# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Configuration (User Service)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB Configuration (Product, Order, Payment, Notification, Inventory)
MONGO_USER=admin
MONGO_PASSWORD=admin123
MONGO_HOST=localhost
MONGO_PORT=27017

# Redis Configuration (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# MESSAGE BROKER CONFIGURATION
# ============================================================================

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Configuration
# IMPORTANT: Generate a strong secret key for production!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production-replace-with-strong-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# PAYMENT SERVICE - STRIPE INTEGRATION
# ============================================================================

# Stripe API Keys
# Get your keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_API_KEY=sk_test_51...your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_...your_webhook_secret_here

# ============================================================================
# NOTIFICATION SERVICE - EMAIL CONFIGURATION
# ============================================================================

# Option 1: SMTP Configuration (Gmail, Outlook, etc.)
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=E-Commerce Platform

# Option 2: SendGrid (Alternative to SMTP)
# Get API key from: https://app.sendgrid.com/settings/api_keys
# Leave empty if using SMTP
SENDGRID_API_KEY=

# ============================================================================
# NOTIFICATION SERVICE - SMS CONFIGURATION
# ============================================================================

# Twilio SMS Configuration
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=AC...your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# ALERTMANAGER - EMAIL NOTIFICATIONS
# ============================================================================

# Email configuration for alerts
ALERTMANAGER_EMAIL_TO=admin@example.com
ALERTMANAGER_EMAIL_FROM=alerts@example.com
ALERTMANAGER_SMTP_HOST=smtp.gmail.com
ALERTMANAGER_SMTP_PORT=587
ALERTMANAGER_SMTP_USERNAME=your-email@gmail.com
ALERTMANAGER_SMTP_PASSWORD=your-app-password-here

# ============================================================================
# SERVICE PORTS
# ============================================================================

USER_SERVICE_PORT=8001
PRODUCT_SERVICE_PORT=8002
ORDER_SERVICE_PORT=8003
PAYMENT_SERVICE_PORT=8004
NOTIFICATION_SERVICE_PORT=8005
INVENTORY_SERVICE_PORT=8006

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger
JAEGER_UI_PORT=16686

# Alertmanager
ALERTMANAGER_PORT=9093

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
